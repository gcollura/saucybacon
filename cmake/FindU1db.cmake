FIND_PATH( U1DB_INCLUDE_DIRS libu1db-qt5/database.h /usr/include /usr/local/include $ENV{INCLUDE} )
FIND_LIBRARY( U1DB_LIBRARIES NAMES u1db-qt5 PATHS /usr/lib /usr/local/lib )

IF(U1DB_INCLUDE_DIRS)
    MESSAGE(STATUS "Found U1db include dir: ${U1DB_INCLUDE_DIRS}")
ELSE(U1DB_INCLUDE_DIRS)
    MESSAGE(STATUS "Could NOT find U1db headers.")
ENDIF(U1DB_INCLUDE_DIRS)

IF(U1DB_LIBRARIES)
    MESSAGE(STATUS "Found U1db library: ${U1DB_LIBRARIES}")
ELSE(U1DB_LIBRARIES)
    MESSAGE(STATUS "Could NOT find U1db library.")
ENDIF(U1DB_LIBRARIES)

IF(U1DB_INCLUDE_DIRS AND U1DB_LIBRARIES)
    SET(U1DB_FOUND "YES")
ELSE(U1DB_INCLUDE_DIRS AND U1DB_LIBRARIES)
    SET(U1DB_FOUND "NO")
    IF(U1DB_FIND_REQUIRED)
        MESSAGE(FATAL_ERROR "Could not find U1db. Please install libu1db-qt5-dev")
    ENDIF(U1DB_FIND_REQUIRED)
ENDIF(U1DB_INCLUDE_DIRS AND U1DB_LIBRARIES)
